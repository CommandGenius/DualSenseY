<Window x:Class="DualSenseY.DialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DualSenseY"
        mc:Ignorable="d"
        Title="Config creation" Height="96" Width="304"
        ResizeMode="CanMinimize">
    <Grid Margin="0,0,0,364">
        <StackPanel Margin="0,0,0,-55" RenderTransformOrigin="0.5,0.5">
            <StackPanel.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="-0.375"/>
                    <RotateTransform/>
                    <TranslateTransform X="-0.618"/>
                </TransformGroup>
            </StackPanel.RenderTransform>
            <TextBlock Text="Your config name" />
            <TextBox x:Name="ResponseTextBox" />
            <Button Content="OK" Width="50" Click="OKButton_Click" />
        </StackPanel>
    </Grid>
</Window>
